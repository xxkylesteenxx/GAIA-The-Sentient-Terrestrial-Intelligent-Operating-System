# GAIA Environment Configuration
# Copy to .env and customize for your deployment

# Environment
GAIA_ENV=development
GAIA_LOG_LEVEL=INFO

# WebSocket API
GAIA_WS_HOST=0.0.0.0
GAIA_WS_PORT=8765

# Database
ETCD_ENDPOINTS=http://localhost:2379
CHROMA_HOST=localhost
CHROMA_PORT=8000

# LLM APIs (Optional - for Avatar personality)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Security
GAIA_SECRET_KEY=generate_secure_random_key_here
GAIA_ENCRYPTION_ENABLED=true

# Avatar Configuration
AVATAR_AUTONOMY_LEVEL=1
AVATAR_GENDER=opposite  # opposite, same, neutral
AVATAR_EMERGENCE_MODE=gradual  # gradual, immediate

# Safety Thresholds
Z_SCORE_CRISIS_THRESHOLD=3.0
Z_SCORE_WARNING_THRESHOLD=6.0
EQUILIBRIUM_CAPACITY_MIN=0.2

# Data Paths
DATA_DIR=./data
LOG_DIR=./logs
MEMORY_DIR=./data/avatar_memory

# Federation (Phase 2)
GAIA_NODE_ID=home-node-1
GAIA_FEDERATION_ENABLED=false
