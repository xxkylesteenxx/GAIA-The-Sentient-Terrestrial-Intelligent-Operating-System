# GAIA Environment Configuration
# Copy this to .env and customize

# User Configuration
GAIA_USER_ID=your_username
GAIA_HOME_DIR=.gaia

# WebSocket Server
GAIA_CORE_PORT=8765
GAIA_BRIDGE_PORT=8766
GAIA_OVERLAY_PORT=8767
GAIA_WS_HOST=localhost

# Z-Score Thresholds
GAIA_CRISIS_THRESHOLD=2.0
GAIA_HEALTHY_THRESHOLD=6.0

# Equilibrium Settings
GAIA_INITIAL_CAPACITY=100.0
GAIA_REST_THRESHOLD=20.0
GAIA_CRITICAL_THRESHOLD=10.0

# Memory Settings
GAIA_MEMORY_DIR=.gaia/memory
GAIA_MAX_MEMORIES=10000
GAIA_USE_CHROMADB=true

# Crisis Resources
GAIA_CRISIS_LIFELINE=988
GAIA_CRISIS_TEXT=741741

# Logging
GAIA_LOG_LEVEL=INFO
GAIA_LOG_DIR=.gaia/logs

# Development
GAIA_DEBUG=false
GAIA_DEV_MODE=false
